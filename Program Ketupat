angka = 15
spasi = int(angka/2)
count = 1

while True:
  if count % 2:
    print(" "*spasi, "*"*count)
    count += 1
    spasi -= 1
   else:
    count += 1
    continue
   if count > angka:
    break
 count = angka -2
 spasi = 1
  
 while True:
  if count % 2:
    print(" "*spasi, "*"*count)
    count -= 1
    spasi += 1
   else:
   count -= 1
   continue
  if count < 0:
    break
